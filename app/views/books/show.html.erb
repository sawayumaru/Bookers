 <div class="header">
  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <nav class="nav navbar-nav navbar-left">
        <span>Bookers</span>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to user_path(current_user.id) do %>
                <span class="glyphicon glyphicon-home home"> Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
              <span class="glyphicon glyphicon-user users"> Users</span>
              <% end %>
            </li>
            <li>
              <%= link_to books_path do %>
              <span class="glyphicon glyphicon-book books"> Books</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <span class="glyphicon glyphicon-log-out logout"> logout</span>
              <% end %>
            </li>
        </ul>
      </nav>
    </div>
  </header>
</div>

<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>


<div class="body">
  <div class="container">
    <div class="row">


      <%= render 'users/left-bar', user: @user, book: @book %>

      <div class="col-xs-9">

        <h2>Book detail</h2>

        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                  <%= attachment_image_tag @user, :profile_image, :size =>'40x40', fallback: "no_image.jpg" %><br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to edit_book_path(@book) do %>
                      <span class="btn-sm btn-success edit_book_44130">Edit</span>
                    <% end %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"} do %>
                    <span class="btn-sm btn-danger destroy_book_44130">Destroy</span>
                  <% end %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>

      </div>

    </div>
  </div>
</div>

<%= render 'users/footer' %>


