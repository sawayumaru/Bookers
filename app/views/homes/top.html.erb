<div class="header">
  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <nav class="nav navbar-nav navbar-left">
        <span>Bookers</span>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user.id) do %>
                <span class="glyphicon glyphicon-home home"> Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
              <span class="glyphicon glyphicon-user users"> Users</span>
              <% end %>
            </li>
            <li>
              <%= link_to books_path do %>
              <span class="glyphicon glyphicon-book books"> Books</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <span class="glyphicon glyphicon-log-out logout"> logout</span>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to root_path do %>
                <span class="glyphicon glyphicon-home home"> Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to homes_show_path do %>
                <span class="glyphicon glyphicon-link about"> About</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
                <span class="glyphicon glyphicon-edit sign_up"> sign up</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
                <span class="glyphicon glyphicon-log-in sign_in"> login</span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
</div>

<div class="body">
  <div class="container">

    <h1>
      welcome to<span class="glyphicon glyphicon-book"><strong>Bookers </strong></span>!!
    </h1>
    <p>In <span class="glyphicon glyphicon-book"><strong>Bookers </strong></span></p>
    <p>you can share and exchange your opinions , impressions , and emotions</p>
    <p>about various books!</p>

    <div class="btn-wrapper">
      <div class="row">
          <%= link_to new_user_session_path do %>
            <p class="btn btn-info col-xs-10 col-xs-offset-1 sign_in"> Log in</p>
          <% end %>
      </div>
      <div class="row">
          <%= link_to new_user_registration_path do %>
            <span class="btn btn-success col-xs-10 col-xs-offset-1 sign_up"> Sign up</span>
          <% end %>
      </div>
    </div>

  </div>
</div>

